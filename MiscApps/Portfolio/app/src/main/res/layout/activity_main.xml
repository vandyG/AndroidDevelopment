<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/pic"
            android:layout_width="170dp"
            android:layout_height="170dp"
            app:srcCompat="@drawable/vandy" />

        <ImageView
            android:id="@+id/circle"
            android:layout_width="170dp"
            android:layout_height="170dp"
            app:srcCompat="@drawable/circle" />
    </FrameLayout>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/vandit_goel"
        android:textStyle="bold"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginTop="10dp"
        android:textSize="13sp"
        android:text="@string/an_electrical_engineering_student_with_a_passion_for_programming"
        android:layout_centerHorizontal="true"
        />

    <ImageButton
        android:id="@+id/facebook"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/facebook"
        android:padding="0dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/bio"
        android:onClick="facebook"/>

    <ImageButton
        android:id="@+id/linkedin"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/linkedin"
        android:padding="0dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/bio"
        android:layout_toLeftOf="@+id/facebook"
        android:layout_marginRight="5dp"
        android:onClick="linkedin"
        android:layout_toStartOf="@+id/facebook" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/spotify"
        android:padding="0dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_below="@+id/bio"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/facebook"
        android:layout_marginLeft="5dp"
        android:onClick="spotify"/>


</RelativeLayout>